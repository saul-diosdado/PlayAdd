{
    "name": "PlayAdd for Spotify",
    "version": "1.0.2",
    "description": "Easily add music being played on YouTube to your Spotify playlists.",
    "permissions": [
        "cookies", "identity", "storage", "tabs",
        "https://www.youtube.com/*", "http://localhost:3000/*", "https://playadd-for-spotify.herokuapp.com/*"],
    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": false
    },
    "browser_action": {},
    "options_page": "settings.html",
    "manifest_version": 2
}