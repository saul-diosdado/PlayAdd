{
    "name": "SpotAdd",
    "version": "0.2",
    "description": "Add YouTube songs to Spotify playlists.",
    "permissions": ["tabs", "activeTab", "webNavigation", "declarativeContent", "*://*.youtube.com/watch*", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}